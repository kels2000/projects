@model USFS.WebUI.Me2U.Models.AdminModel

<div class="profile-and-ticket-claim-page-container">

    <h1>Ticket Claims</h1>
    <table id="ticket-claims-table" class="table-bordered table-striped">
        <thead>
            <tr>

                <th>Event Name</th>
                <th>Date Posted</th>
                <th>Number of Claims</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var ticketPost in Model.Events)
            {
                <tr>
                    <td><a class="event-name" href="@Url.Action("LoadTicketGiveAwayView", "Admin", new {area = "", eventId = ticketPost.EventId})">@ticketPost.EventName</a></td>
                    <td>@ticketPost.DatePosted.ToString("M")</td>
                    <td>@ticketPost.TotalHandsRaised</td>
                </tr>

            }
        </tbody>
    </table>
</div>

<script>
    $(function () {

        //initalize ticket claims table 
        $('#ticket-claims-table').DataTable(
            {
                searching: true,
                bLengthChange: false,
                bPaginate: true,
                bInfo: false,
                "ordering": false

            }
        );
    });

    
</script>