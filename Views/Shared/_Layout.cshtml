        window.jQuery || document.write('<script src="/Scripts/jquery-2.2.4.min.js">\x3C/script>')
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Unobtrusive")
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript" src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="/Scripts/jquery.uploadfile.js"></script>
    <script type="text/javascript" src="/Scripts/dropzone.js"></script>
    <script type="text/javascript" src="/Scripts/slick.js"></script>
    <script type="text/javascript" src="/Scripts/typeahead.bundle.js"></script>
    <script type="text/javascript" src="/Scripts/list.js"></script>
    <link rel="stylesheet" href="https://use.typekit.net/jsx6pag.css">
</head>

<body>
    @* main *@
    <div id="public-wrapper" class="container site-wrapper">
        @* header *@
        <header id="header-wrapper" role="heading" class="header-wrapper container">
            <div class="inner-container">
                <div class="row">
                    <div id="logo" class="col-md-2">
                        <a href="@Url.Action("Index", "Home",  new {area= string.Empty}, null)"><img alt="Logo" class="logo" src="~/Images/TestImages/me2you-newlogo.png" /></a>
                    </div>
                    @{
                        if (!Model.UserLoginName.IsNullOrEmpty())
                        {
                            <div class="col-md-6 nav-container">
                                <nav id="nav-wrapper" class="nav-wrapper row" role="navigation">
                                    <ul class="main-nav">
                                        @if (Request.IsAuthenticated)
                                        {
                                            <li class="col-md-3">@Html.ActionLink("Home", "Index", "Home")</li>
                                            <li class="col-md-3">@Html.ActionLink("Merchandise", "Index", "Post")</li>
                                           <!--<li class="col-md-3">@Html.ActionLink("Ticket Hub", "Index", "Events")</li>-->
                                            <li class="col-md-3">@Html.ActionLink("Create A Post", "CreatePost", "Post")</li>
                                        }
                                    </ul>
                                </nav>
                            </div>

                            <div class="search-container col-md-4">
                                <nav class="row">
                                    <form id="search-box" action="@(Url.Action("Search", "Home", new {area = ""}))" method="POST">
                                        <button class="util-btn">@Html.ActionLink(" ", "Index", "Profile")@Model.UserLoginName.Substring(0, 2).ToUpper()</button>
                                        <button class="util-btn">@Html.ActionLink(" ", "CreatePost", "Post")<i class="fa fa-plus"></i></button>
                                        <button type="submit" class="util-btn"><i class="fa fa-search" aria-hidden="true"></i></button>
                                        <input type="text" placeholder="Search" name="searchText" />
                                    </form>
                                </nav>
                            </div>
                        }
                    }
                </div>
            </div>
        </header>
      

        <div id="content">
            <div class="inner-container">
                <div class="content wrapper row content-body">
                    @RenderBody()
                </div>
            </div>
            @*/content *@
        </div>
        @* footer *@
        <footer id="footer-wrapper" role="region" class="footer-wrapper container">
            <div class="inner-container">
                <div class="row">
                    <div class="col-xs-4 col-sm-4 col-md-4">
                        <div class="footer-logo"></div>
                    </div>

                    <div class="col-xs-2 col-sm-2 col-md-2">
                        <ul id="footer-copyright">
                            <li>Copyright © @DateTime.Now.Year</li>
                            <li>United Shore Financial Services, LLC.</li>
                            <li>All Rights Reserved.</li>
                        </ul>
                    </div>

                    <div class="col-xs-6 col-sm-6 col-md-6" id="footer-text">
                        @if (Request.IsAuthenticated)
                        {<div class="footer-disclaimer">
                                <div id="site-disclaimer">disclaimer:</div> Participating team members agree to fully abide
                                by any rules established by United Shore with respect to Me2You. Further, participating team members agree that
                                United Shore shall have no liability or duty with respect to the items exchanged through Me2You, the delivery or
                                use of such items, or otherwise.
                            </div>
                            <div class="footer-rules">
                                <div id="free-items">Free Item Rules:</div> Team members shall not receive any form of payment in connection with items posted to Me2You. Team
                                members may claim a maximum of two (2) items per thirty (30) days from Me2You. In the event that you claim something you no
                                longer need, please repost the item.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </footer>
        @* /footer *@
    </div>




</body>
</html>

<script>
    $(function () {
        $("#nav-wrapper").find("a").addClass("main-link nav-item").wrapInner('<span class="text-center link-text">');
    });

    function showAjaxLoader() {
        /*find ajax loader div tag*/
        var loaderDiv = $("#ajax-loader");
        if (loaderDiv.length === 0) {
            /*create ajax loader div tag, if not present*/
            loaderDiv = $('<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="AjaxLoaderModal" aria-hidden="true" />')
                .html('<div class="modal-dialog"><div class="modal-content"><p><strong>Loading...</strong></p></div></div>')
                .attr("id", "ajax-loader")
                .addClass("ajaxLoader");
            loaderDiv.appendTo("body");
        }
        /*show it*/
        loaderDiv.show();
    }

    /*hide ajax loader div tag, if present*/
    function hideAjaxLoader() {
        $("#ajax-loader").hide();
    }

    $('.search-button').on("click", function (e) {
        var searchtext = $('#search-box').val();
        if (searchtext.length < 3) {
            e.preventDefault();
        }
        if (/^(.*[a-zA-Z0-9]+){3,}$/.test(searchtext)) {
        } else {
            e.preventDefault();
        }
    });

</script>